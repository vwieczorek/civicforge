{
  "name": "civicforge-serverless",
  "version": "1.0.0",
  "description": "Enabling peer-to-peer trust through dual-attestation of community quests",
  "private": true,
  "workspaces": [
    "backend",
    "frontend"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "cd backend && serverless offline",
    "dev:frontend": "cd frontend && npm start",
    "test": "npm run test:backend && npm run test:frontend",
    "test:backend": "cd backend && pytest",
    "test:frontend": "cd frontend && npm test",
    "build": "npm run build:backend && npm run build:frontend",
    "build:backend": "cd backend && pip install -r requirements.txt -t .",
    "build:frontend": "cd frontend && npm run build",
    "deploy:dev": "cd backend && serverless deploy --stage dev",
    "deploy:prod": "cd backend && serverless deploy --stage prod"
  },
  "devDependencies": {
    "concurrently": "^8.2.0",
    "serverless": "^3.35.0",
    "serverless-offline": "^13.2.0",
    "serverless-python-requirements": "^6.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}